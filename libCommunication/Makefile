CC = g++
AR = ar
CFLAGS = -c -Wall \
	-I include/ \
	-I ../libLogConfigTime/include/ \
	-I ../libPlatformSpecifics/include/
LDFLAGS = 

all: libCommunication.a
#libMiscTimeAndConfig libVideoInput libLogConfigTime libMiscTimeAndConfigAndroid

LIBCOMMUNICATION_OBJECTS =  \
	src/JpegMessage.o \
	src/JsonMessage.o \
	src/JsonWithAuxMessage.o \
	src/MatImageMessage.o \
	src/MeasurementLogMessage.o \
	src/PingMessage.o \
	src/PongMessage.o \
	src/SendlogMessage.o \
	src/SendPositionMessage.o \
	src/TakePictureMessage.o \
	src/PhoneProxy.o \
	src/PositionMessage.o \
	src/TextMessage.o \
	src/PropertyMessage.o \
	src/jsoncpp.o \
	#src/PhoneServer.o


libCommunication.a: $(LIBCOMMUNICATION_OBJECTS)
	$(AR) rcs libCommunication.a $(LIBCOMMUNICATION_OBJECTS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
	
clean:
	rm -rf src/*.o libCommunication.a
	
.PHONY: all clean
